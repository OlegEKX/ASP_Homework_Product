@model Basket
@{
	int summ = 0;
}
@if (Model == null)
{
	<h2>Корзина пустая</h2>
}
else
{
	<div class = "row">
		<div class = "col">
			<table class = "table">
				<thead>

					<tr>
						<th>Название</th>
						<th>Цена руб.</th>
						<th>Количество</th>
						<th>Стоимость руб.</th>
					</tr>
					
				</thead>

				<tbody>
					@foreach (var item in Model.Items)
					{
						<tr>
							<td>@item.Product.Name</td>
							<td>@item.Product.Cost руб.</td>
							<td>@item.Amount</td>
							<td>@item.Cost руб.</td>
						</tr>
					}
				</tbody>
			</table>
			<div class = "text-right">
				<h4>
					Итого:
				</h4>
				<h5>@Model.Cost Руб.</h5>

				<div class = "text-left">
					<a class = "btn btn-dark" href = "/home/index" role = "button">Продолжить покупки</a>
					<a class = "btn btn-dark" href = "#" role = "button">Оформить заказ</a>
				</div>
			</div>
		</div>
	</div>
	
}